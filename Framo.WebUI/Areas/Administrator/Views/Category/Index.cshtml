@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (Category item in Model)
        {
            <tr>
                <td>@(item.CategoryName != null ? item.CategoryName : "-")</td>
                <td>@(item.Description != null ? item.Description : "-")</td>
                <td>
                    @Html.ActionLink("Güncelle", "Update", "Category", new { id = item.ID }, new { @class = "btn btn-default" }) -
                    @Html.ActionLink("Sil", "Delete", "Category", new { id = item.ID }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Ekle", "Insert", "Category", new { @class = "btn btn-default" })