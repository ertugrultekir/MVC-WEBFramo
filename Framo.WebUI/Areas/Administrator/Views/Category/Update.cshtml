@model Category

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "Category", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    @Html.HiddenFor(x => x.CreatedDate)
    @Html.HiddenFor(x => x.CreatedIP)
    @Html.HiddenFor(x => x.CreatedComputerName)
    @Html.HiddenFor(x => x.ModifiedDate)
    @Html.HiddenFor(x => x.ModifiedIP)
    @Html.HiddenFor(x => x.ModifiedComputerName)

    <div class="form-group">
        @Html.Label("Kategoryi Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" }) @Html.ValidationMessageFor(x => x.CategoryName)
    </div>
    <div class="form-group">
        @Html.Label("Açıklama")
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Güncelle</button>
}

