@model Movie

@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h2>Insert</h2>

@using (Html.BeginForm("Insert", "Movie", FormMethod.Post, new { enctype="multipart/form-data" }))
{
    <div class="form-group">
        <label for="email">Film Adı:</label>
        @Html.TextBoxFor(x=> x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="pwd">Konu:</label>
        @Html.TextBoxFor(x => x.Sypnosis, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="pwd">Afiş:</label>
        <input type="file" name="fluAfis" />
    </div>
    <div class="form-group">
        <label for="pwd">Kategori:</label>
        @Html.DropDownList("CategoryID", (SelectList)ViewBag.CategoryID)
    </div>
    <button type="submit" class="btn btn-default">Kaydet</button>
}